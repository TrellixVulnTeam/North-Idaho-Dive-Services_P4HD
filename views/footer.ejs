<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column has-text-centered">
                <div class="content">
                    <h2 class="title is-2 mt-4">
                        Ready to get started?
                    </h2>
                    <p class="subtitle">Fill & submit the form below, or give us a call at <strong><a
                                href="tel:1-805-331-3172">(805) 331-3172</a></strong>.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <form action="/" method="POST">
            <div class="field mt-4">
                <label class="label">Name*</label>
                <div class="control">
                    <input name="name" class="input" type="text" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Email*</label>
                <div class="control">
                    <input name="email" class="input" type="email" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Phone Number*</label>
                <div class="control">
                    <input id="phoneInput" name="phone" class="input" type="tel" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Location (for maintenance & recovery) </label>
                <div class="control">
                    <input name="location" class="input" type="text">
                </div>
            </div>

            <div class="field">
                <label class="label">What can we help with?*</label>
                <div class="control">
                    <textarea name="details" class="textarea" required></textarea>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <input class="button is-primary" type="submit" value="Submit">
                </div>
            </div>
        </form>
    </div>
</section>
