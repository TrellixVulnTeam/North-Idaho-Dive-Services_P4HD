<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column has-text-centered">
                <div class="content">
                    <h2 class="title is-2 mt-4">
                        Ready to get to work?
                    </h2>
                    <p class="subtitle">Fill & submit the form below, or give us a call at <strong><a
                                href="tel:1-208-555-5555">(208) 555-5555</a></strong>.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <form action="/" method="POST">
            <div class="field mt-4">
                <label class="label">Name</label>
                <div class="control">
                    <input name="name" class="input" type="text" placeholder="Jacques Cousteau">
                </div>
            </div>

            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input name="email" class="input" type="email" placeholder="you@email.com">
                </div>
            </div>

            <div class="field">
                <label class="label">Phone Number</label>
                <div class="control">
                    <input name="phone" class="input" type="tel" placeholder="(555) 555-555">
                </div>
            </div>

            <div class="field">
                <label class="label">Location (if for maintenance or recovery) </label>
                <div class="control">
                    <input name="location" class="input" type="text" placeholder='"Bayview, ID" or "Hayden Lake"'>
                </div>
            </div>

            <div class="field">
                <label class="label">What can we help with?</label>
                <div class="control">
                    <textarea name="details" class="textarea" placeholder="..."></textarea>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <input class="button is-primary" type="submit" value="Submit">
                </div>
                <div class="control">
                    <button class="button is-link is-light">Cancel</button>
                </div>
            </div>
        </form>
    </div>

</section>

<footer class="footer">
    <div class="content has-text-centered">
        <p>
            All Rights Reserved &copy; <strong>North Idaho Dive Services, LLC.</strong>
        </p>
        <p>
            by <a href="/">Timothy Jan</a>
        </p>
    </div>
</footer>
